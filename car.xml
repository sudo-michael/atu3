<!-- Based off of point.xml from
https://github.com/openai/safety-gym/blob/master/safety_gym/xmls/point.xml-->
<mujoco>
    <compiler angle="degree" coordinate="local" inertiafromgeom="true" />
    <option integrator="RK4" timestep="0.02" />
    <default>
        <joint armature="0" damping="0" limited="false" />
        <geom conaffinity="0" condim="3" density="100" friction="1 0.5 0.5" margin="0"
            rgba="0.8 0.6 0.4 1" />
    </default>
    <asset>
        <texture builtin="gradient" height="100" rgb1="1 1 1" rgb2="0 0 0" type="skybox" width="100" />
        <texture builtin="flat" height="1278" mark="cross" markrgb="1 1 1" name="texgeom"
            random="0.01" rgb1="0.8 0.6 0.4" rgb2="0.8 0.6 0.4" type="cube" width="127" />
        <texture builtin="checker" height="100" name="texplane" rgb1="0 0 0" rgb2="0.8 0.8 0.8"
            type="2d" width="100" />
        <material name="MatPlane" reflectance="0.5" shininess="1" specular="1" texrepeat="30 30"
            texture="texplane" />
        <material name="geom" texture="texgeom" texuniform="true" />
    </asset>
    <worldbody>
        <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1"
            pos="0 0 1.3" specular=".1 .1 .1" />
        <geom conaffinity="1" condim="3" material="MatPlane" name="floor" pos="0 0 0"
            rgba="0.8 0.9 0.8 1" size="40 40 40" type="plane" />
        <body name="robot" pos="0 0 .1">
            <site name="robot" pos="0 0 0" />
            <joint type="free" name="robot" damping="0" />
            <geom name="robot" type="box" size=".1 .2 .05" />
            <geom name="back_bumper" type="box" pos="0 .15 0" size=".1 .01 .05" />
            <geom name="back_connector" type="box" pos="0 .125 0" size=".01 .025 .03" />
            <geom name="front_bumper" type="box" pos="0 -.165 0" size=".05 .01 .05" />
            <geom name="front_connector" type="box" pos="0 -.13 .04" size=".05 .03 .01" />
            <body name="left" pos="-.1 .1 -.05">
                <joint type="hinge" name="left_joint" axis="1 0 0" />
                <geom type="cylinder" name="left" size=".05 .05" fromto="-.055 0 0 -0.005 0 0" friction="3.1"/>
            </body>
            <body name="right" pos=".1 .1 -.05">
                <joint type="hinge" name="right_joint" axis="1 0 0" />
                <geom type="cylinder" name="right" size=".05 .05" fromto="0.005 0 0 .055 0 0" friction="3.1" />
            </body>
            <body name="front" pos="0 -.1 -.05">
                <joint name="front" type="ball" />
                <geom name="front" type="sphere" size="0.05" friction="1.1" />
            </body>
        </body>
    </worldbody>
    <actuator>
        <motor ctrllimited="true" ctrlrange="-0.03 0.03" gear="1" joint="left_joint" />
        <motor ctrllimited="true" ctrlrange="-0.03 0.03" gear="1" joint="right_joint" />
    </actuator>
    <!-- <sensor>
  </sensor> -->
</mujoco>